{
  "name": "@pleaseai/mcp",
  "type": "module",
  "version": "0.1.0",
  "description": "MCP server and CLI for tool search",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pleaseai-mcp": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "bun dist/cli.js",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "catalog:",
    "@pleaseai/mcp-core": "workspace:*",
    "chalk": "catalog:",
    "cli-table3": "catalog:",
    "commander": "catalog:",
    "ora": "catalog:",
    "std-env": "^3.10.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@types/node": "catalog:",
    "eslint": "^9.39.0",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
