{
  "name": "@pleaseai/mcp-gateway",
  "type": "module",
  "version": "0.2.2-beta.1",
  "description": "MCP server and CLI for tool search",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pleaseai-mcp": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "bun dist/cli.js",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --cache --concurrency=auto",
    "lint:fix": "eslint . --fix --cache --concurrency=auto",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.2.1",
    "@modelcontextprotocol/sdk": "catalog:",
    "@pleaseai/mcp-core": "workspace:*",
    "chalk": "catalog:",
    "cli-table3": "catalog:",
    "commander": "catalog:",
    "open": "catalog:",
    "ora": "catalog:",
    "std-env": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@types/bun": "catalog:",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  },
  "publishConfig": {
    "tag": "beta"
  }
}
